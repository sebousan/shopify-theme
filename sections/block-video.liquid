{% liquid 
  assign text = section.settings.text
  assign author = section.settings.author
%}

<div class="container">
  <figure>
    <blockquote>
      <p>{{ text }}</p>
    </blockquote>
    <figcaption>
      <p>{{ author }}</p>
    </figcaption>
  </figure>
</div>

{% schema %}
  {
    "name": "t:sections.video.name",
    "tag": "section",
    "class": "block-video",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "t:sections.global.title"
      }, {
        "type": "richtext",
        "id": "text",
        "label": "t:sections.global.text"
      }
    ],
    "presets": [
      {
        "name": "t:sections.video.name"
      }
    ]
  }
{% endschema %}