{% liquid 
  assign title = section.settings.title
  assign text = section.settings.text
  assign collections = section.settings.collection_list
%}

<div class="container">

  {% render 'block-heading', title: title, subtitle: subtitle %}

  <div class="collections"></div>
</div>

{% schema %}
  {
    "name": "t:sections.featured-collections.name",
    "tag": "section",
    "class": "block-featured-collections",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "t:sections.global.title"
      }, {
        "type": "richtext",
        "id": "subtitle",
        "label": "t:sections.global.subtitle"
      }, {
        "type": "collection_list",
        "id": "collection_list",
        "label": "Collections",
        "limit": 4
      }
    ],

    "presets": [
      {
        "name": "Collections sélectionnées"
      }
    ]
  }
{% endschema %}