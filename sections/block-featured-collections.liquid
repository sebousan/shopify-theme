{% liquid 
  assign title = section.settings.title
  assign text = section.settings.text
%}

<div class="container">

  {%- if title != blank or text != blank -%}
    <header class="heading">
      {%- if title != blank -%}
        <h2>{{ title }}</h2>
      {%- endif -%}
      {%- if text != blank -%}
        <p>{{ text }}</p>
      {%- endif -%}
    </header>
  {%- endif -%}

  <div class="collections"></div>
</div>

{% schema %}
  {
    "name": "Collections sélectionnées",
    "tag": "section",
    "class": "block-featured-collections",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Titre"
      }, {
        "type": "richtext",
        "id": "text",
        "label": "Texte"
      }, {
        "type": "collection_list",
        "id": "collection_list",
        "label": "Collections",
        "limit": 4
      }
    ],

    "presets": [
      {
        "name": "Collections sélectionnées"
      }
    ]
  }
{% endschema %}