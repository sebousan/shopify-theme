{% liquid
  assign id = section.id
  assign title = section.settings.title
  assign subtitle = section.settings.subtitle
  assign background = section.settings.background
%}

{% schema %}
  {
    "name": "t:sections.newsletter.name",
    "class": "block-newsletter",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "t:sections.headings.title",
        "default": "t:sections.newsletter.title_default"
      }, {
        "type": "richtext",
        "id": "subtitle",
        "label": "t:sections.headings.subtitle",
        "default": "t:sections.newsletter.subtitle_default"
      }, {
        "type": "checkbox",
        "id": "background",
        "default": false,
        "label": "t:sections.newsletter.background"
      }
    ],
    "presets": [
      {
        "name": {
          "en": "Newsletter",
          "fr": "Newsletter"
        },
        "category": {
          "en": "Promotional",
          "fr": "Promotionnel"
        }
      }
    ]
  }
{% endschema %}